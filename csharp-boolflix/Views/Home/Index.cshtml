@{
	ViewData["Title"] = "Home Page";
}

@model List<Film>

@{
	Film randFilm = Model[new Random().Next(Model.Count)];
}

<div class="p-5 mb-4 bg-light rounded-3">
	<div class="container-fluid py-5">
		<h1 class="display-5 fw-bold">@randFilm.Title</h1>
		<p class="col-md-8 fs-4">@randFilm.Description</p>
		<button class="btn btn-primary btn-lg" type="button">Play</button>
	</div>
</div>